.aside{
	width:4rem;
	border-right: 1px solid #ddd;
	font-size: .85rem;
}
.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 1px solid #ddd;
	z-index: 10;
}
.type-nav.selected{
	margin-right: -1px;
	padding-left::-1px;
	color: #333;
	background-color: #fff;
}
.content{
	background-color: #fff;
}

.detail{
	margin-left: 1rem;
	padding: 1rem;
	border-bottom: 1px solid #ddd;
}
.detail .title{
	display: block;
	font-size: 1rem;
}
.detail p{
	color: orange;
	font-size: .75rem;
}
