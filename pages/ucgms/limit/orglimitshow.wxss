.preview{
    margin-bottom: 10px;
}

.preview {
  position: relative;
  background-color: #FFFFFF;
}

.preview:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

.preview:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

.preview__value {
  font-size: 14px;
}

.preview__value_in-hd {
  font-size: 14px;
  color: #555555;
}

.preview__hd {
  position: relative;
  padding: 10px 15px;
  text-align: right;
  line-height: 2;
}

.preview__hd:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  left: 15px;
}

.preview__bd {
  padding: 10px 15px;
  font-size: .9em;
  text-align: right;
  color: #555555;
  line-height: 2;
}

.preview__bd:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  left: 15px;
}

.preview__ft {
  position: relative;
  line-height: 50px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.preview__ft:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D5D5D6;
  color: #D5D5D6;
}

.preview__item {
  overflow: hidden;
}

.preview__label {
  float: left;
  margin-right: 1em;
  min-width: 4em;
  color: #555555;
  text-align: justify;
  text-align-last: justify;
}

.preview__value {
  display: block;
  overflow: hidden;
  word-break: normal;
  word-wrap: break-word;
}

.preview__btn {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #3CC51F;
  text-align: center;
}

.preview__btn:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1rpx solid #D5D5D6;
  color: #D5D5D6;
}

